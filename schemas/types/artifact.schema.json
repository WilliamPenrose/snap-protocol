{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://snap-protocol.org/schemas/0.1/types/artifact.schema.json",
  "title": "SNAP Artifact",
  "description": "Output produced by a task. Contains one or more parts.",

  "type": "object",
  "properties": {
    "artifactId": {
      "title": "Artifact ID",
      "description": "Unique identifier for this artifact.",
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[a-zA-Z0-9_-]+$"
    },
    "name": {
      "title": "Artifact Name",
      "description": "Human-readable name (e.g. filename).",
      "type": "string",
      "minLength": 1,
      "maxLength": 256
    },
    "parts": {
      "title": "Parts",
      "description": "Content parts of this artifact.",
      "type": "array",
      "items": { "$ref": "part.schema.json" },
      "minItems": 1,
      "maxItems": 100
    }
  },

  "required": ["artifactId", "parts"],
  "additionalProperties": false
}
